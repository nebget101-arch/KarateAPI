{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Post Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Post ID"
    },
    "userId": {
      "type": "integer",
      "description": "User ID who created the post"
    },
    "title": {
      "type": "string",
      "description": "Post title",
      "minLength": 1
    },
    "body": {
      "type": "string",
      "description": "Post content",
      "minLength": 1
    }
  },
  "required": ["id", "userId", "title", "body"],
  "additionalProperties": false
}
